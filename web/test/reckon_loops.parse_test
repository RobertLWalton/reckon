power = 1
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|power|} =
     {|1|}|}
i = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|i|} = {|0|}|}
next power, next i = repeat:
    if i >= 10: exit
    next power * = 2
    next i + = 1
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
     {|{|{|next power|}, {|next i|}|} = {|repeat|}|}
     {"": .terminator = *INDENTED_PARAGRAPH*, .initiator = ":"|
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|if
               {|{|i|} >= {|10|}|} ":" {|exit|}|}
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next power|} [< * = >] {|2|}|}
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next i|} [< + = >] {|1|}|}|}|}

sum  = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|sum|} = {|0|}|}
do 5 times:
    next sum = sum + 10
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
     {|do {|5|} times|}
     {"": .terminator = *INDENTED_PARAGRAPH*, .initiator = ":"|
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next sum|} = {|{|sum|} + {|10|}|}|}|}|}
sum
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|sum|}
next sum = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|next sum|} =
     {|0|}|}

next i = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|next i|} =
     {|0|}|}
while i < 3:
    next i = i + 1
    next sum = sum + 10
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
     {|while {|{|i|} < {|3|}|}|}
     {"": .terminator = *INDENTED_PARAGRAPH*, .initiator = ":"|
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next i|} = {|{|i|} + {|1|}|}|}
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next sum|} = {|{|sum|} + {|10|}|}|}|}|}
next sum = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|next sum|} =
     {|0|}|}
next i = 0
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|{|next i|} =
     {|0|}|}
next i, next sum = do until i >= 2:
    next i = i + 1
    next sum = sum + 10
{"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
     {|{|{|next i|}, {|next sum|}|} = {|do until {|{|i|} >= {|2|}|}|}|}
     {"": .terminator = *INDENTED_PARAGRAPH*, .initiator = ":"|
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next i|} = {|{|i|} + {|1|}|}|}
          {"": .terminator = "<LF>", .initiator = *LOGICAL_LINE*|
               {|next sum|} = {|{|sum|} + {|10|}|}|}|}|}
